<Page
    x:Class="TotoroNext.Anime.Views.WatchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ab="using:TotoroNext.Anime.Abstractions"
    xmlns:c="using:TotoroNext.Anime"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TotoroNext.Anime.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:TotoroNext.Anime"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <uc:MediaPlayerElementHost
            x:Name="Host"
            Grid.Row="0"
            Grid.Column="0"
            EngineType="{x:Bind c:Converters.ToGuid('b8c3f0d2-1c5e-4f6a-9b7d-3f8e1c5f0d2a')}" />

        <Grid
            Grid.Row="1"
            Padding="16"
            VerticalAlignment="Stretch"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                VerticalAlignment="Center"
                Style="{ThemeResource BodyStrongTextBlockStyle}"
                Text="Servers" />

            <utu:ChipGroup
                Grid.Column="1"
                ItemsSource="{x:Bind ViewModel.Servers, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedServer, Mode=TwoWay}"
                SelectionMode="Single">
                <utu:ChipGroup.ItemTemplate>
                    <DataTemplate x:DataType="ab:VideoServer">
                        <TextBlock Text="{x:Bind Name}" />
                    </DataTemplate>
                </utu:ChipGroup.ItemTemplate>
                <utu:ChipGroup.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </utu:ChipGroup.ItemsPanel>
            </utu:ChipGroup>
        </Grid>

        <StackPanel
            Grid.RowSpan="2"
            Grid.Column="1"
            MinWidth="200"
            MaxWidth="300">
            <ListView ItemsSource="{x:Bind ViewModel.Episodes, Mode=OneWay}" SelectedItem="{x:Bind ViewModel.SelectedEpisode, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="ab:Episode">
                        <TextBlock>
                            <Run Text="{x:Bind Number}" />
                            <Run Text="{x:Bind Name}" />
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

    </Grid>
</Page>


