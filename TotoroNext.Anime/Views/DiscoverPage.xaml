<Page
    x:Class="TotoroNext.Anime.Views.DiscoverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TotoroNext.Anime.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:taa="using:TotoroNext.Anime.Abstractions"
    xmlns:utu="using:Uno.Toolkit.UI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Margin="36">
        <ItemsRepeater ItemsSource="{Binding Items}">
            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="taa:SearchResult">
                    <utu:Card HeaderContent="{Binding Title}"
                              MediaContent="{Binding Image}"
                              AutomationProperties.AutomationId="Elevated_Card_Media_Content"
                              Style="{StaticResource ElevatedCardStyle}">
                        <utu:Card.HeaderContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Margin="16,14,16,0"
                                           Style="{ThemeResource TitleLarge}" />
                            </DataTemplate>
                        </utu:Card.HeaderContentTemplate>
                        <utu:Card.MediaContentTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}"
                                       Stretch="Uniform"
                                       MaxHeight="300" />
                            </DataTemplate>
                        </utu:Card.MediaContentTemplate>
                    </utu:Card>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
            <ItemsRepeater.Layout>
                <UniformGridLayout ItemsStretch="Fill" MinItemHeight="300" MinItemWidth="200"/>
            </ItemsRepeater.Layout>
        </ItemsRepeater>
    </Grid>
</Page>
