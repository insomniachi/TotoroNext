<Page
    x:Class="TotoroNext.Anime.Views.DiscoverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TotoroNext.Anime.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:taa="using:TotoroNext.Anime.Abstractions"
    xmlns:vm="using:TotoroNext.Anime.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <ItemsRepeater ItemsSource="{Binding Items}">
            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="taa:SearchResult">
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
    </Grid>
</Page>
